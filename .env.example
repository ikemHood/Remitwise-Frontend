# Session encryption for wallet-based auth (required for /api/auth/*).
# Generate with: openssl rand -base64 32
SESSION_PASSWORD=your-32-char-minimum-secret-here

# Session duration in seconds (optional, default: 604800 = 7 days)
# Controls how long a session remains valid before expiring
SESSION_MAX_AGE=604800

# Enable session refresh with sliding window (optional, default: false)
# When enabled, each authenticated request extends the session by SESSION_MAX_AGE
# When disabled, sessions expire at their original expiry time regardless of activity
SESSION_REFRESH_ENABLED=false
ANCHOR_WEBHOOK_SECRET="your_shared_anchor_secret_here"
